@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";

}


<div class="row d-flex justify-content-center mt-5">

    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Log in</h2>
                <hr />
                <div class="row">
                    <div class="col-md-6"><button class="w-100 btn btn-lg btn-primary mb-3" onclick="setAdmin()">Admin</button></div>
                    <div class="col-md-6"><button class="w-100 btn btn-lg btn-primary mb-3" onclick="setPM()">Project Manager</button></div>
                    <div class="col-md-6"><button class="w-100 btn btn-lg btn-primary mb-3" onclick="setDeveloper()">Developer</button></div>
                    <div class="col-md-6"><button class="w-100 btn btn-lg btn-primary mb-3" onclick="setSubmitter()">Submitter</button></div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input id="email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input id="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

</div>

